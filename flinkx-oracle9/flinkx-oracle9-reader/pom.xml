<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>flinkx-oracle9</artifactId>
        <groupId>com.dtstack.flinkx</groupId>
        <version>1.6</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>flinkx-oracle9-reader</artifactId>
    <dependencies>
        <dependency>
            <groupId>com.dtstack.flinkx</groupId>
            <artifactId>flinkx-oracle9-core</artifactId>
            <version>1.6</version>
        </dependency>
        <dependency>
            <groupId>com.dtstack.flinkx</groupId>
            <artifactId>flinkx-rdb-reader</artifactId>
            <version>1.6</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <createDependencyReducedPom>false</createDependencyReducedPom>
                            <artifactSet>
                                <excludes>
                                    <exclude>org.slf4j:slf4j-api</exclude>
                                    <exclude>log4j:log4j</exclude>
                                    <exclude>ch.qos.logback:*</exclude>
                                </excludes>
                            </artifactSet>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                            <relocations>
                                <relocation>
                                    <pattern>io.netty</pattern>
                                    <shadedPattern>shade.oracle9Reader.io.netty</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.common</pattern>
                                    <shadedPattern>shade.core.com.google.common</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.thirdparty</pattern>
                                    <shadedPattern>shade.core.com.google.thirdparty</shadedPattern>
                                </relocation>


                                <relocation>
                                    <pattern>oracle.core</pattern>
                                    <shadedPattern>shade.oracle.core</shadedPattern>
                                </relocation>

                                <relocation>
                                    <pattern>oracle.jdbc</pattern>
                                    <shadedPattern>shade.oracle.jdbc</shadedPattern>
                                </relocation>

                                <relocation>
                                    <pattern>oracle.jpub</pattern>
                                    <shadedPattern>shade.oracle.jpub</shadedPattern>
                                </relocation>

                                <relocation>
                                    <pattern>oracle.net</pattern>
                                    <shadedPattern>shade.oracle.net</shadedPattern>
                                </relocation>

                                <relocation>
                                    <pattern>oracle.security</pattern>
                                    <shadedPattern>shade.oracle.security</shadedPattern>
                                </relocation>

                                <relocation>
                                    <pattern>oracle.sql</pattern>
                                    <shadedPattern>shade.oracle.sql</shadedPattern>
                                </relocation>

                                <relocation>
                                    <pattern>oracle.ons</pattern>
                                    <shadedPattern>shade.oracle.ons</shadedPattern>
                                </relocation>

                                <relocation>
                                    <pattern>oracle.simplefan</pattern>
                                    <shadedPattern>shade.oracle.simplefan</shadedPattern>
                                </relocation>

                                <relocation>
                                    <pattern>oracle.ucp</pattern>
                                    <shadedPattern>shade.oracle.ucp</shadedPattern>
                                </relocation>

                            </relocations>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.2</version>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <!-- here the phase you need -->
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <copy todir="${basedir}/../../syncplugins/oracle9reader">
                                    <fileset dir="target/">
                                        <include name="${project.name}-${project.version}.jar" />
                                    </fileset>
                                </copy>

                                <copy todir="${basedir}/../../syncplugins/oracle9reader">
                                    <fileset dir="${basedir}/../../flinkx-oracle9/src/main/resources/">
                                        <include name="oracle9.zip" />
                                    </fileset>
                                </copy>


                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
